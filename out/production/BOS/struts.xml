        <!--配置全局的结果视图-->
        <global-results>
            <result name="login" type="redirect">/login.jsp</result>
            <result name="unauthorizedUrl" type="redirect">/authorizing.jsp</result>
        </global-results>

        <!-- 抛出具体异常来到指定页面-->
        <global-exception-mappings>
            <exception-mapping exception="org.apache.shiro.authz.UnauthorizedException" result="unauthorizedUrl"></exception-mapping>
        </global-exception-mappings>

        <!-- 配置jsp页面的访问规则-->
        <action name="page_*_*" >
            <result name="success">/WEB-INF/pages/{1}/{2}.jsp</result>
        </action>

        <!--用户模块-->
        <action name="user_*" class="com.lp.bos.web.action.UserAction" method="{1}">
            <result name="home">/WEB-INF/pages/common/index.jsp</result>
            <result name="loginFailure">/login.jsp</result>
            <result name="submit">/WEB-INF/pages/admin/userlist.jsp</result>
        </action>

        <!--取派员模块-->
        <action name="staff_*" class="com.lp.bos.web.action.StaffAction" method="{1}">
            <result name="success">/WEB-INF/pages/base/staff.jsp</result>

        </action>

        <!--区域模块-->
        <action name="region_*" class="com.lp.bos.web.action.RegionAction" method="{1}">

            <result name="success">/WEB-INF/pages/base/region.jsp</result>
        </action>

        <!--分区模块-->
        <action name="subarea_*" class="com.lp.bos.web.action.SubareaAction" method="{1}">
            <result name="success">/WEB-INF/pages/base/subarea.jsp</result>
        </action>

        <!--定区模块-->
        <action name="decidedzone_*" class="com.lp.bos.web.action.DecidedzoneAction" method="{1}">
            <result name="success">/WEB-INF/pages/base/decidedzone.jsp</result>
        </action>

        <!--业务通知单模块-->
        <action name="noticebill_*" class="com.lp.bos.web.action.NoticebillAction" method="{1}">
            <result name="submit">/WEB-INF/pages/qupai/noticebill_add.jsp</result>
            <result name="success">/WEB-INF/pages/qupai/noticebill.jsp</result>
        </action>

        <!--工单管理模块-->
        <action name="workOrderManage_*" class="com.lp.bos.web.action.WorkOrderManageAction" method="{1}">
            <result name="success">/WEB-INF/pages/qupai/quickworkorder.jsp</result>
        </action>
        <!--功能权限模块-->
        <action name="function_*" class="com.lp.bos.web.action.FunctionAction" method="{1}">
            <result name="submit">/WEB-INF/pages/admin/function.jsp</result>
        </action>
        <!--角色模块-->
        <action name="role_*" class="com.lp.bos.web.action.RoleAction" method="{1}">
            <result name="submit">/WEB-INF/pages/admin/role.jsp</result>
        </action>
    </package>
</struts>